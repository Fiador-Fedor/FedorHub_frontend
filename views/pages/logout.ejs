<%- include('../partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-gray-50 to-gray-100 py-12">
  <div class="max-w-lg w-full">
    <!-- Card -->
    <div class="bg-white rounded-xl shadow-lg border border-indigo-900">
      <div class="p-6 space-y-6">
        <!-- Title -->
        <h3 class="text-center text-2xl font-bold text-yellow-400">
          <%= message %>
        </h3>

        <!-- Conditional Logout Message -->
        <% if (user.role === 'SHOP_OWNER') { %>
          <p class="text-center text-indigo-900">
            Are you sure you want to log out of your FedorHub account as the Shop Owner? Logging out will terminate your session, and you will lose access to manage your shop and oversee orders. Ensure you save any ongoing work or address pending orders before logging out to avoid disruptions.
          </p>
        <% } else if (user.role === 'USER') { %>
          <p class="text-center text-indigo-900">
            Are you sure you want to log out of your FedorHub account? Logging out will end your session. If you have items in your cart or any pending orders, please complete or save them before logging out. We look forward to welcoming you back soon!
          </p>
        <% } %>

        <!-- Buttons for Logout and Cancel -->
        <div class="flex justify-center gap-4 mt-6">
          <!-- Logout Form -->
          <form id="logoutForm" action="/user/logout" method="POST" class="inline-block">
            <button
              type="submit"
              id="confirmLogoutBtn"
              class="py-2 px-4 text-indigo-900 bg-yellow-400 rounded-lg font-bold hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-500 shadow transition-colors"
            >
              Logout
            </button>
          </form>
          <!-- Cancel Button -->
          <a
            href="/"
            class="py-2 px-4 text-yellow-400 bg-indigo-900 rounded-lg font-bold hover:bg-indigo-800 focus:outline-none focus:ring-2 focus:ring-indigo-500 shadow transition-colors"
          >
            Cancel
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
