<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../../partials/header"); %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment Details</title>
</head>
<body class="bg-gray-100 font-sans">
  <div class="container mx-auto py-12 max-w-2xl">
    <!-- Payment Form -->
    <form action="/order/checkout" method="POST" class="bg-white p-8 rounded-lg shadow-md space-y-6">
      <h2 class="text-2xl font-bold text-indigo-900 mb-6 text-center">Payment Details</h2>

      <!-- Card Number -->
      <div>
        <label class="block text-gray-700 text-sm font-semibold mb-2">Card Number</label>
        <input 
          type="text" 
          name="cardNumber"
          class="w-full p-3 border border-gray-300 rounded-md"
          placeholder="1234 5678 9012 3456"
          pattern="[0-9\s]{13,19}"
          required
        >
      </div>

      <!-- Expiry and CVV -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-gray-700 text-sm font-semibold mb-2">Expiration Date</label>
          <input 
            type="text" 
            name="expiry"
            class="w-full p-3 border border-gray-300 rounded-md"
            placeholder="MM/YY"
            pattern="(0[1-9]|1[0-2])\/[0-9]{2}"
            required
          >
        </div>
        <div>
          <label class="block text-gray-700 text-sm font-semibold mb-2">CVV</label>
          <input 
            type="text" 
            name="cvv"
            class="w-full p-3 border border-gray-300 rounded-md"
            placeholder="123"
            pattern="\d{3,4}"
            required
          >
        </div>
      </div>

      <!-- Cardholder Name -->
      <div>
        <label class="block text-gray-700 text-sm font-semibold mb-2">Cardholder Name</label>
        <input 
          type="text" 
          name="cardholderName"
          class="w-full p-3 border border-gray-300 rounded-md"
          placeholder="John Doe"
          required
        >
      </div>

      <!-- Payment Buttons -->
      <div class="flex justify-between items-center pt-6">
        <a 
          href="/order/cart" 
          class="px-6 py-3 bg-gray-500 text-white rounded-md hover:bg-gray-600"
        >
          Cancel
        </a>
        <button 
          type="submit" 
          class="px-6 py-3 bg-yellow-500 text-indigo-900 font-bold rounded-md hover:bg-yellow-400"
        >
          Confirm Payment
        </button>
      </div>
    </form>
  </div>

  <%- include("../../partials/footer"); %>
</body>
</html>