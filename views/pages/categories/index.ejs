<%- include("../../partials/header") %>
<div class="container mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-center text-2xl font-bold text-blue-800 mb-6">Categories</h1>
  
  <a 
    href="/categories/add" 
    class="block text-center mb-6 px-4 py-2 bg-blue-800 text-yellow-400 font-bold rounded hover:bg-blue-900">
    Add Category
  </a>

  <% if (categories.length === 0) { %>
    <p class="text-center text-gray-500">No categories available. Please add a new one!</p>
  <% } else { %>
    <div class="overflow-x-auto">
      <table class="w-full border border-gray-300 rounded-lg">
        <thead class="bg-blue-800 text-white">
          <tr>
            <th class="px-4 py-2">#</th>
            <th class="px-4 py-2">Name</th>
            <th class="px-4 py-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach((category, index) => { %>
            <tr class="hover:bg-gray-100">
              <td class="px-4 py-2 text-center"><%= index + 1 %></td>
              <td class="px-4 py-2 text-center"><%= category.name %></td>
              <td class="px-4 py-2 text-center">
                <a 
                  href="/categories/<%= category._id %>/edit" 
                  class="inline-block px-4 py-2 bg-blue-800 text-yellow-400 font-bold rounded hover:bg-blue-900">
                  Edit
                </a>
                <form 
                  action="/categories/<%= category._id %>/delete" 
                  method="POST" 
                  class="inline-block" 
                  onsubmit="return confirm('Are you sure you want to delete this category?')">
                  <button 
                    type="submit" 
                    class="px-4 py-2 bg-yellow-400 text-blue-800 font-bold rounded hover:bg-yellow-500">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>
<%- include("../../partials/footer") %>
