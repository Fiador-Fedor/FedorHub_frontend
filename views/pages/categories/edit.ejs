<%- include("../../partials/header") %>
<div class="container mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-center text-2xl font-bold text-blue-800 mb-6">Edit Category</h1>
  
  <form action="/categories/<%= category._id %>/edit" method="POST">
    <div class="mb-4">
      <label for="name" class="block text-lg font-semibold text-blue-800 mb-2">Category Name</label>
      <input 
        type="text" 
        id="name" 
        name="name" 
        value="<%= category.name %>" 
        required 
        class="w-full px-4 py-2 border border-blue-800 rounded focus:ring focus:ring-blue-300"
      />
    </div>
    <button 
      type="submit" 
      class="w-full px-4 py-2 bg-blue-800 text-yellow-400 font-bold rounded hover:bg-blue-900">
      Update Category
    </button>
  </form>
</div>
<%- include("../../partials/footer") %>
