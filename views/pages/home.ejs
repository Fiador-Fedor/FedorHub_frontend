<%- include('../partials/header') %>

<main class="container mx-auto p-6">
  <div class="bg-blue-900 text-yellow-400 p-6 rounded-lg">
    <!-- User Profile -->
    <section class="text-center border-b border-yellow-400 pb-4 mb-4">
      <img
        class="w-24 h-24 rounded-full mx-auto border-2 border-yellow-400 object-cover mb-3"
        src="<%= user.profileImage || 'https://www.shutterstock.com/image-vector/avatar-gender-neutral-silhouette-vector-600nw-2470054311.jpg' %>"
        alt="Profile Picture"
      >
      <h2 class="text-white text-lg font-bold"><%= user.username %></h2>
      <span class="text-yellow-400 text-sm"><%= user.email %></span>
      <div class="mt-1">
        <span>Role:</span>
        <span class="bg-yellow-400 text-blue-900 px-2 py-1 rounded text-xs">
          <%= user.role %>
        </span>
      </div>
      <div class="mt-3">
        <a 
          href="/edit" 
          class="inline-block bg-yellow-400 text-blue-900 px-3 py-1 rounded text-sm"
        >
          Edit Profile
        </a>
      </div>
    </section>

    <!-- Navigation Menu -->
    <section>
      <nav>
        <ul class="space-y-3">
          <% if (user.role === 'SHOP_OWNER') { %>
            <li>
              <a 
                href="/products/add" 
                class="block text-yellow-400 hover:underline"
              >
                Add Products
              </a>
            </li>
            <li>
              <a 
                href="/products" 
                class="block text-yellow-400 hover:underline"
              >
                View Products
              </a>
            </li>
            <li>
              <a 
                href="/categories/" 
                class="block text-yellow-400 hover:underline"
              >
                Categories
              </a>
            </li>
          <% } else { %>
            <li>
              <a 
                href="/order" 
                class="block text-yellow-400 hover:underline"
              >
                Browse Products
              </a>
            </li>
            <li>
              <a 
                href="/order/orders" 
                class="block text-yellow-400 hover:underline"
              >
                My Orders
              </a>
            </li>
            <li>
              <a 
                href="/order/cart" 
                class="block text-yellow-400 hover:underline"
              >
                My Cart
              </a>
            </li>
          <% } %>
        </ul>
      </nav>
    </section>
  </div>
</main>

<%- include('../partials/footer') %>
