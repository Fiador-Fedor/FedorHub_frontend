<%- include('../partials/header') %>

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 py-12">
  <div class="max-w-2xl mx-auto">
    <!-- Profile Card -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-indigo-900">
      <!-- Profile Header -->
      <div class="bg-indigo-900 text-center p-8">
        <img
          id="profileImage"
          src="<%= user.profileImageUrl || 'https://www.shutterstock.com/image-vector/avatar-gender-neutral-silhouette-vector-600nw-2470054311.jpg' %>"
          alt="User Image"
          class="w-32 h-32 rounded-full mx-auto border-4 border-yellow-400 shadow-md"
        />
        <h3 class="mt-4 text-xl font-bold text-yellow-400"><%= user.name || user.username %></h3>
        <p class="text-sm text-gray-200"><%= user.email %></p>
      </div>

      <!-- Profile Information -->
      <div class="px-6 py-8 space-y-4">
        <p class="text-gray-700"><span class="font-semibold text-indigo-900">Age:</span> <%= user.age || 'N/A' %></p>
        <p class="text-gray-700"><span class="font-semibold text-indigo-900">Location:</span> <%= user.location || 'Not specified' %></p>

        <% if (user.role === 'SHOP_OWNER') { %>
          <div>
            <h4 class="text-lg font-semibold text-indigo-900">Shop Details</h4>
            <p class="text-gray-700"><span class="font-semibold">Shop Name:</span> <%= user.shopName || 'No shop available' %></p>
            <p class="text-gray-700"><span class="font-semibold">Shop Description:</span> <%= user.shopDescription || 'N/A' %></p>
            <p class="text-gray-700"><span class="font-semibold">Shop Address:</span> <%= user.shopAddress || 'N/A' %></p>
          </div>
        <% } %>
      </div>

      <!-- Edit Profile Button -->
      <div class="px-6 py-4 bg-gray-50">
        <a
          href="/edit"
          class="block w-full text-center py-3 bg-yellow-400 hover:bg-yellow-300 text-indigo-900 font-bold rounded-lg transition-colors duration-200 shadow"
        >
          Edit Profile
        </a>
      </div>

      <!-- Footer -->
      <div class="bg-gray-100 text-center py-4 border-t border-gray-300">
        <p class="text-sm text-gray-600">Manage your profile and shop information efficiently.</p>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
