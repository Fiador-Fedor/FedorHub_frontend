<%- include("../../partials/header") %>
<div class="container mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-center text-2xl font-bold text-blue-800 mb-6">Add Product</h1>
  
  <form action="/products/add" method="POST" enctype="multipart/form-data">
    <!-- Product Name -->
    <div class="mb-4">
      <label for="title" class="block text-lg font-semibold text-yellow-500 mb-2">Product Title</label>
      <input 
        type="text" 
        id="title" 
        name="title" 
        required 
        class="w-full px-4 py-2 border border-blue-800 rounded focus:ring focus:ring-blue-300"
      />
    </div>

    <!-- Description -->
    <div class="mb-4">
      <label for="description" class="block text-lg font-semibold text-yellow-500 mb-2">Description</label>
      <textarea 
        id="description" 
        name="description" 
        rows="4" 
        required 
        class="w-full px-4 py-2 border border-blue-800 rounded focus:ring focus:ring-blue-300"
      ></textarea>
    </div>

    <!-- Category -->
    <div class="mb-4">
      <label for="category" class="block text-lg font-semibold text-yellow-500 mb-2">Category</label>
      <select 
        id="category" 
        name="category_id" 
        required 
        class="w-full px-4 py-2 border border-blue-800 rounded focus:ring focus:ring-blue-300"
      >
        <% categories.forEach(category => { %>
          <option value="<%= category._id %>"><%= category.name %></option>
        <% }); %>
      </select>
    </div>

    <!-- Price -->
    <div class="mb-4">
      <label for="price" class="block text-lg font-semibold text-yellow-500 mb-2">Price</label>
      <input 
        type="number" 
        step="0.01" 
        id="price" 
        name="price" 
        required 
        class="w-full px-4 py-2 border border-blue-800 rounded focus:ring focus:ring-blue-300"
      />
    </div>

    <!-- Quantity -->
    <div class="mb-4">
      <label for="quantity" class="block text-lg font-semibold text-yellow-500 mb-2">Quantity</label>
      <input 
        type="number" 
        id="quantity" 
        name="quantity" 
        required 
        class="w-full px-4 py-2 border border-blue-800 rounded focus:ring focus:ring-blue-300"
      />
    </div>

    <!-- Image Upload -->
    <div class="mb-4">
      <label for="image" class="block text-lg font-semibold text-yellow-500 mb-2">Image</label>
      <p class="text-sm text-gray-600 mb-2">You can either upload an image file or provide an image URL.</p>
      <input 
        type="file" 
        id="image" 
        name="imageFile" 
        accept="image/*" 
        class="w-full px-4 py-2 border border-blue-800 rounded mb-2"
      />
      <input 
        type="text" 
        id="image-url" 
        name="image" 
        placeholder="Or provide an image URL" 
        class="w-full px-4 py-2 border border-blue-800 rounded"
      />
    </div>

    <!-- Submit Button -->
    <button 
      type="submit" 
      class="w-full px-4 py-2 bg-blue-800 text-yellow-400 font-bold rounded hover:bg-blue-900">
      Add Product
    </button>
  </form>
</div>
<%- include("../../partials/footer") %>
